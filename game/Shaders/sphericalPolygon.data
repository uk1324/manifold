struct SphericalPolygonVertex {
	Vec3 position;
	Vec3 normal;
}

shader SphericalPolygon {
	vertexStruct = SphericalPolygonVertex;
	vertUniforms = {
		Mat4 transform;
	};
	fragUniforms = {
		Vec4 cameraPos;
		Mat4 viewInverse4;
	};
	vertInstance = {
		Mat4 transform;
	};
	fragInstance = {
		Vec4 n0;
		Vec4 n1;
		Vec4 n2;
		Vec4 n3;
		Vec4 planeNormal;
	};
	vertOut = {
		Vec3 interpolatedNormal;
	};
}

